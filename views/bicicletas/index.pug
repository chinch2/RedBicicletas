extends ../layout

block content
    a(href='/bicicletas/create') Nueva Bicicleta
    table.table
        thead
            tr
                th(scope='col') ID
                th(scope='col') Color
                th(scope='col') Modelo
                th(scope='col') Ubicacion
    tbody
        each bici in bicis
            tr
            td(scope='row')
                =bici.id
            td= bici.color
            td= bici.modelo
            td= bici.ubicacion
    br
    br
    a(href='/') Inicio
